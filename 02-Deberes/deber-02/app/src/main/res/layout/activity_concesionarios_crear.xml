<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crear_concesionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConcesionariosCrear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_crear_concesionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR/EDITAR CONCESIONARIO"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/txt_nombre_concesionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre del concesionario"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/txt_ubicacion_concesionario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la ubicación del concesionario"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/txt_numero_empleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el número de empleados"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/chk_is_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Está abierto"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_guardar_concesionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>
